<%- layout("/layouts/boilerplate") -%>

<div class="container mt-5" >
  <div class="row justify-content-center" >
    <div class="col-md-6">
      <h2 class="text-center mb-4">Login to Our Prototype</h2>
      <form action="/login" method="POST" class="needs-validation" novalidate>
        <div class="mb-3">
          <label for="username" class="form-label" style="color: #29303E;">Username</label>
          <input
            name="username"
            placeholder="Enter your username"
            type="text"
            class="form-control"
            required
          />
        </div>

        <div class="mb-3">
          <label for="password" class="form-label" style="color: #29303E;">Password</label>
          <input
            name="password"
            placeholder="Enter your password"
            type="password"
            class="form-control"
            required
          />
        </div>

        <div class="text-center" style="color: #E72744;">
          <button type="submit" class="btn btn-success" style="background-color: #E72744;">Login</button>
        </div>
        <br>
        <br>
        <br>
        <br>
      </form>
    </div>
  </div>
</div>
